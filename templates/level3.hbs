<main class="level3">
	<header>
		<p>Further information</p>
		<h2>{{title}}</h2>
		{{#description}}
			<p>{{this}}</p>
		{{/description}}
		<h3>Contents</h3>
		<ol>
			{{#each contents}}
				<li><a href="#{{id}}">{{{text}}}</a></li>
			{{/each}}
		</ol>
	</header>
	{{{shift_headers 2 body}}}
</main>
<aside>
	{{#if invalid_uris}}
	<div class="warning">
		<p>This document has links that go nowhere:</p>
		<ul>
			{{#each invalid_uris}}
				<li><code>{{this}}</code></li>
			{{/each}}
		</ul>
	</div>
	{{/if}}
</aside>
