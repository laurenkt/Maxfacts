<main class="level3">
	<header>
		<h2>{{title}}{{#if surtitle}} <span class="surtitle">({{surtitle}})</span>{{/if}}</h2>
		{{#description}}
			<p>{{this}}</p>
		{{/description}}
		{{#if contents.length}}
		<h3>Contents</h3>
		<ol>
			{{#each contents}}
				<li><a href="#{{id}}">{{{text}}}</a></li>
			{{/each}}
		</ol>
		{{/if}}
	</header>
	{{{shift_headers 2 body}}}
	{{> next-section}}
</main>
{{> article-metadata}}
