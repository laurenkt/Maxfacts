<div class="directory-browser levels-{{levels}}">
	{{#each directory}}
	<nav>
		<ul>
			{{#each this}}
				<li><a href="/{{uri}}" class="{{type}} {{lookup ../../selected uri}}">{{title}}</a></li>
			{{/each}}
		</ul>
	</nav>
	{{/each}}
	{{#if body}}
	<section>
		<h3>{{title}}</h3>
		{{{shift_headers 3 body}}}
	</section>
	{{/if}}
</div>
