{{#each directory}}
<nav>
	<ul>
		{{#each this}}
			<li><a href="/{{uri}}" class="{{type}} {{lookup ../../selected uri}}">{{title}}</a></li>
		{{/each}}
	</ul>
</nav>
{{/each}}
<section>
	<h3>{{title}}</h3>
	{{#if body}}
		{{{shift_headers 3 body}}}
	{{else}}
		<p>This section has no content yet.</p>
	{{/if}}
</section>
