<!DOCTYPE html>
<html>
	<head>
		<title>{{title}}</title>
		<link rel="stylesheet" href="/css/style.css" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	</head>
	<body>
		<header>
			<div>
				<h1><a href="/">MaxFacts</a></h1>
				<form action="/search" method="GET">
					<button></button>
					<input type="search" name="query" placeholder="Search">
				</form>
			</div>
			<nav>
				<p>
					<a href="/">Home</a>
					{{#each breadcrumbs}}
					» <a href="/{{uri}}">{{title}}</a>
					{{/each}}
				</p>
			</nav>
		</header>
		<section>
			{{{body}}}
		</section>
		<footer>
			<p>
				<a href="/editor">Editor</a>
			{{#if edit_uri}}
				— <a href="{{edit_uri}}">Edit this page</a>
			{{/if}}
		</p>
		</footer>
	</body>
</html>
