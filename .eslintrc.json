{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"promise",
		"mocha"
	],
	"rules": {
		"no-cond-assign": ["error", "except-parens"],
		"no-var": "error",
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"promise/prefer-await-to-then": "error",
		"no-console": [
			"error",
			{
				"allow": ["warn", "error"]
			}
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			"error",
			"never"
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"varsIgnorePattern": "^_$",
				"argsIgnorePattern": "^_$"
			}
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"no-shadow": [
			"error", { "hoist": "never" }
		],
		"react/display-name": [
			0
		],
		"react/prop-types": [0]
	}
}
